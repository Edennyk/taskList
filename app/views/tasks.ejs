<!DOCTYPE html>
<html>
<head>
<title><%= title %></title>
<link rel="stylesheet" href="/css/liststyles.css" />
</head>
<body>
    <div class="nav">
        <ul>
          <li><a class="active" href="/">Home</a></li>
          <li><a href="/add_tasks">New</a></li>
          <li><a href="/list_tasks">List</a></li>
        </ul>
      </div>

      <main id ="site-main">
<div class="container">
<header>List all Tasks</header>

<form method = "post" action="/edit_task">
	<table align="center" >
		<tr>
            <td>
                <div>
                <label>Task ID:</label>
                

                </div>

            </td>
            <td>

                <div>
                <label>Task Name:</label>
                
                </div>

            </td>
            <td>

                <div>
                <label>Task Description:</label>
                
                </div>
            </td>
            <td>
                <div>

                <label>Start Date:</label>
                
                </div>

            </td>
            <td>
				<div>
				
                <label>End date </label>
				
           
				</div>

            </td>
			<td>
				<div>
				
                <label>Owner </label>
				
           
				</div>

            </td>
        </tr>
	

	<% tasks.forEach(function(task){ %>
	
		<tr>
            <td>
                <div>
                
                <input type="text" name="taskId" value="<%= task.taskId %>"/>

                </div>

            </td>
            <td>

                <div>
                
                <input type="text" name="taskName" value="<%= task.taskName %>"/>
                
                </div>

            </td>
            <td>

                <div>
                
                <input type="text" name="taskDescription" value="<%= task.taskDescription %>"/>
                
                </div>
            </td>
            <td>
                <div>

                
                <input type="text" name="startDate" value="<%= task.startDate %>" />
                
                </div>

            </td>
			<td>
                <div>

                
                <input type="text" name="endDate" value="<%= task.endDate %>" />
                
                </div>

            </td>

			<td>
                <div>

                
                <input type="text" name="owner" value="<%= task.owner %>" />
                </div>
            </td>
            <td>
				<div>
                <input type="submit" formaction="/list_tasks/<%= task.taskId %>?_method=PUT" value="Update" style="width: 100px"/>
                <input type="submit" formaction="/list_tasks/<%= task.taskId %>?_method=DELETE" value="Delete" style="width: 100px"/>
				</div>
            </td>
        </tr>
	<% })%>
	</table>
</form>
</div>
      </main>

   <!-- include footer -->
   <%- include('include/_footer')%>
   <!-- /include footer -->